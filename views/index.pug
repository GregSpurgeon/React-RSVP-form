html
  head
    title= title
  body
    h1= title

    form(action="/reply" method="post")
      fieldset
        legend="Your Contact Info"
        label(for="name")="Name"
        input(type="text" name="name" required)
        br
        label(for="email")="Email"
        input(type="email" name="email" required)
        br
        label(for= "attending") I'll be there
        input(type="radio" name="attending" value="true")
        br 
        label(for= "attending") I can't make it
        input(type="radio" name="attending" value="false")
        br  
        label(for="guests") Number of Guests         
        select(name="guests")
          option(value="1") 1
          option(value="2") 2
          option(value="3") 3
          option(value="4") 4
          option(value="5") 5
          option(value="6") 6
          option(value="7") 7
          option(value="8") 8
      br
      button(type="submit") Submit 